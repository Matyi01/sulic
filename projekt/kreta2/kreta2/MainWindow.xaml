<Window x:Class="KretaClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KRÉTA - Főoldal" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="#2D3E50" Grid.Column="0">
            <TextBlock Text="KRÉTA" Foreground="White" FontSize="20" Margin="10"/>
            <Button Content="Órarend" Margin="10" Click="Orarend_Click"/>
            <Button Content="Jegyek" Margin="10" Click="Jegyek_Click"/>
            <Button Content="Hiányzások" Margin="10" Click="Hianyzasok_Click"/>
        </StackPanel>

        <Frame x:Name="MainContent" Grid.Column="1"/>
    </Grid>
</Window>