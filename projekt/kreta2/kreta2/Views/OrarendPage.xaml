<Page x:Class="KretaClone.Views.OrarendPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Órarend">
    <ScrollViewer>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"/>
            <TextBlock Text="Hétfő" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Kedd" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Szerda" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Csütörtök" Grid.Row="0" Grid.Column="4" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Péntek" Grid.Row="0" Grid.Column="5" HorizontalAlignment="Center" FontWeight="Bold"/>

            <TextBlock Text="1." Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="2." Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="3." Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="4." Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="5." Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="6." Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="7." Grid.Row="7" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="8." Grid.Row="8" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Border Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <TextBlock Text="Matematika - 101" TextWrapping="Wrap"/>
            </Border>
            <Border Grid.Row="2" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <TextBlock Text="Magyar - 102" TextWrapping="Wrap"/>
            </Border>
            <Border Grid.Row="1" Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <TextBlock Text="Történelem - 202" TextWrapping="Wrap"/>
            </Border>
            <Border Grid.Row="3" Grid.Column="4" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <TextBlock Text="Történelem - 202" TextWrapping="Wrap"/>
            </Border>
            <Border Grid.Row="2" Grid.Column="4" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <TextBlock Text="Irodalom - 202" TextWrapping="Wrap"/>
            </Border>
            <Border Grid.Row="5" Grid.Column="4" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <TextBlock Text="Programozás - 202" TextWrapping="Wrap"/>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>