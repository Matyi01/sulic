                    <Separator HorizontalAlignment="Left" Margin="176,130,0,0" VerticalAlignment="Top" Height="6" Width="60"/>
                    <TextBlock x:Name="textBlock_Copy2" HorizontalAlignment="Left" Margin="184,114,0,0" TextWrapping="Wrap" Text="számláló" VerticalAlignment="Top"/>
                    <TextBlock x:Name="textBlock1_Copy2" HorizontalAlignment="Left" Margin="188,136,0,0" TextWrapping="Wrap" Text="nevező" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="6. feladat">
                <Grid Background="#FFE5E5E5">
                    <Separator HorizontalAlignment="Left" Margin="56,97,0,0" VerticalAlignment="Top" Height="6" Width="60"/>
                    <TextBlock x:Name="textBlock_Copy3" HorizontalAlignment="Left" Margin="63,81,0,0" TextWrapping="Wrap" Text="számláló" VerticalAlignment="Top"/>
                    <TextBlock x:Name="textBlock1_Copy3" HorizontalAlignment="Left" Margin="67,103,0,0" TextWrapping="Wrap" Text="nevező" VerticalAlignment="Top"/>
                    <Label x:Name="label5_Copy2" Content="+" HorizontalAlignment="Left" Margin="117,86,0,0" VerticalAlignment="Top"/>
                    <Separator HorizontalAlignment="Left" Margin="134,97,0,0" VerticalAlignment="Top" Height="6" Width="60"/>
                    <TextBlock x:Name="textBlock_Copy4" HorizontalAlignment="Left" Margin="141,81,0,0" TextWrapping="Wrap" Text="számláló" VerticalAlignment="Top"/>
                    <TextBlock x:Name="textBlock1_Copy4" HorizontalAlignment="Left" Margin="145,103,0,0" TextWrapping="Wrap" Text="nevező" VerticalAlignment="Top"/>
                    <Label x:Name="label5_Copy3" Content="=" HorizontalAlignment="Left" Margin="194,86,0,0" VerticalAlignment="Top"/>
                    <Separator HorizontalAlignment="Left" Margin="213,97,0,0" VerticalAlignment="Top" Height="6" Width="60"/>
                    <TextBlock x:Name="textBlock_Copy5" HorizontalAlignment="Left" Margin="221,81,0,0" TextWrapping="Wrap" Text="számláló" VerticalAlignment="Top"/>
                    <TextBlock x:Name="textBlock1_Copy5" HorizontalAlignment="Left" Margin="225,103,0,0" TextWrapping="Wrap" Text="nevező" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="7. feladat">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="button" Content="Csináld!" HorizontalAlignment="Center" VerticalAlignment="Center" Height="129" Width="294" FontSize="80"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
