        <TabControl x:Name="tabControl">
            <TabItem Header="1, 3. feladat">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="80,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="60"/>
