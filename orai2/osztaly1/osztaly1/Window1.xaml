        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:osztaly1"
        mc:Ignorable="d"
        Title="Window1" Height="200" Width="200">
    <Grid>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <Label x:Name="label" Content="Megnyitások száma:" HorizontalAlignment="Left" Margin="20,50,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="150,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

    </Grid>
</Window>
