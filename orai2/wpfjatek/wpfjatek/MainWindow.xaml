<Window x:Class="wpfjatek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfjatek"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="367,186,0,0" VerticalAlignment="Top" MouseEnter="button_MouseEnter"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="367,186,0,0" VerticalAlignment="Top" MouseEnter="button_MouseEnter1"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Label x:Name="label1" Content="0" Margin="10,10,0,0" Width="50" Height="50"/>

            </TabItem>
        </TabControl>

    </Grid>
</Window>
